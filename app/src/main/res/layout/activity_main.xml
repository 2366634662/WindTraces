<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/ctlayout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:padding="8dp"
        tl:tl_indicator_height="0dp"
        tl:tl_textSelectColor="@color/main_tab_blue_cor"
        tl:tl_textUnselectColor="@color/main_tab_gray_cor" />

    <View
        android:id="@+id/main_lines"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/ctlayout_main"
        android:background="@color/line_cor" />

    <com.ac57.ui.view.MyViewPager
        android:id="@+id/vp_main_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_lines" />
</RelativeLayout>
