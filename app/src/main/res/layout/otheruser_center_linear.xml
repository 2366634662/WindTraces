<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_39PX"
        android:layout_marginBottom="@dimen/DIMEN_25PX"
        android:layout_marginLeft="@dimen/DIMEN_25PX"
        android:layout_marginRight="@dimen/DIMEN_25PX"
        android:layout_marginTop="@dimen/DIMEN_10PX"
        android:background="@drawable/otheruser_center_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/otheruser_center_tab1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/otheruser_center_item_bg"
            android:gravity="center"
            android:text="发布的话题"
            android:textColor="@android:color/white"
            android:textSize="@dimen/DIMEN_18PX" />

        <TextView
            android:id="@+id/otheruser_center_tab2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="参与的话题"
            android:textColor="@color/otheruser_center_tv_cor"
            android:textSize="@dimen/DIMEN_18PX" />

        <TextView
            android:id="@+id/otheruser_center_tab3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="关注的藏品"
            android:textColor="@color/otheruser_center_tv_cor"
            android:textSize="@dimen/DIMEN_18PX" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_11PX"
        android:background="#f6f6f6" />
</LinearLayout>