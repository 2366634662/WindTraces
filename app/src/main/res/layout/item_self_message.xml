<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/DIMEN_18PX"
            android:paddingLeft="@dimen/DIMEN_25PX"
            android:paddingRight="@dimen/DIMEN_25PX"
            android:paddingTop="@dimen/DIMEN_18PX">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_self_message_img"
                    android:layout_width="@dimen/DIMEN_26PX"
                    android:layout_height="@dimen/DIMEN_19PX"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/personal_good" />

                <TextView
                    android:id="@+id/tv_self_message_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/DIMEN_8PX"
                    android:layout_weight="1"
                    android:text="风迹活动"
                    android:textColor="#232f3d"
                    android:textSize="@dimen/DIMEN_18PX" />

                <TextView
                    android:id="@+id/tv_self_message_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="03月28日 13:12"
                    android:textColor="#9c9e9f"
                    android:textSize="@dimen/DIMEN_16PX" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/DIMEN_15PX"
                android:layout_marginTop="@dimen/DIMEN_15PX"
                android:background="#f6f6f6" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_self_message_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查查"
                    android:textColor="#4a4a4a"
                    android:textSize="@dimen/DIMEN_16PX" />

                <TextView
                    android:id="@+id/tv_self_message_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_self_message_content"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/white"
                    android:paddingLeft="@dimen/DIMEN_13PX"
                    android:text="查看更多"
                    android:textColor="#2c8dff"
                    android:textSize="@dimen/DIMEN_16PX" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_self_message_st"
            android:layout_width="@dimen/DIMEN_13PX"
            android:layout_height="@dimen/DIMEN_13PX"
            android:layout_alignParentRight="true"
            android:src="@drawable/news_red"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_12PX"
        android:background="#f2f2f2" />


</LinearLayout>