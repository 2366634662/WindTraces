<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/register_one_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_200PX"
        android:background="#2c8dff">

        <ImageView
            android:id="@+id/register_one_back"
            android:layout_width="@dimen/DIMEN_39PX"
            android:layout_height="@dimen/DIMEN_34PX"
            android:layout_marginLeft="@dimen/DIMEN_15PX"
            android:layout_marginTop="@dimen/DIMEN_25PX"
            android:paddingBottom="@dimen/DIMEN_10PX"
            android:paddingLeft="@dimen/DIMEN_10PX"
            android:paddingRight="@dimen/DIMEN_10PX"
            android:paddingTop="@dimen/DIMEN_10PX"
            android:src="@drawable/login_back" />

        <TextView
            android:id="@+id/register_one_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/DIMEN_10PX"
            android:layout_marginTop="@dimen/DIMEN_15PX"
            android:paddingBottom="@dimen/DIMEN_10PX"
            android:paddingLeft="@dimen/DIMEN_10PX"
            android:paddingRight="@dimen/DIMEN_15PX"
            android:paddingTop="@dimen/DIMEN_15PX"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="@dimen/DIMEN_16PX" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_60PX"
            android:layout_marginTop="@dimen/DIMEN_95PX"
            android:text="@string/register_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/DIMEN_28PX" />

        <ImageView
            android:layout_width="@dimen/DIMEN_135PX"
            android:layout_height="@dimen/DIMEN_125PX"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/login_pic" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llayout_register_one_center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_one_top"
        android:layout_marginTop="@dimen/DIMEN_90PX"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_register_one_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_100PX"
            android:text="手机号码"
            android:textColor="#9d9d9d"
            android:textSize="@dimen/DIMEN_16PX"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/DIMEN_25PX"
            android:layout_marginTop="@dimen/DIMEN_10PX"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/DIMEN_58PX"
            android:paddingRight="@dimen/DIMEN_58PX">

            <ImageView
                android:layout_width="@dimen/DIMEN_20PX"
                android:layout_height="fill_parent"
                android:src="@drawable/login_phone" />

            <EditText
                android:id="@+id/ed_register_one_tel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/DIMEN_15PX"
                android:background="@null"
                android:hint="手机号码!"
                android:inputType="phone"
                android:maxLength="11"
                android:textColor="#4b4b4b"
                android:textColorHint="#9d9d9d"
                android:textSize="@dimen/DIMEN_18PX" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/DIMEN_58PX"
            android:layout_marginRight="@dimen/DIMEN_58PX"
            android:layout_marginTop="@dimen/DIMEN_18PX"
            android:background="#f2f2f2" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_register_one_bnt"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_55PX"
        android:layout_below="@id/llayout_register_one_center"
        android:layout_marginLeft="@dimen/DIMEN_25PX"
        android:layout_marginRight="@dimen/DIMEN_25PX"
        android:layout_marginTop="@dimen/DIMEN_110PX"
        android:background="@drawable/login_bnt_bg1"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@android:color/white"
        android:textSize="@dimen/DIMEN_16PX" />
</RelativeLayout>