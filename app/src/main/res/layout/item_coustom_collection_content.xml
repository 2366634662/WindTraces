<?xml version="1.0" encoding="utf-8"?>
<com.ac57.ui.view.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/read_bg_cor"
    android:clickable="true"
    android:paddingBottom="1dp"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">

    <RelativeLayout
        android:id="@+id/rlayout_coustom_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/DIMEN_30PX"
            android:paddingLeft="@dimen/DIMEN_25PX"
            android:paddingRight="@dimen/DIMEN_25PX"
            android:paddingTop="@dimen/DIMEN_30PX">

            <RelativeLayout
                android:id="@+id/rllayout_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_coustom_collection_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="亚太电信套票"
                    android:textColor="#5c5c5c"
                    android:textSize="@dimen/DIMEN_20PX" />


                <TextView
                    android:id="@+id/tv_coustom_collection_title_zf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/DIMEN_32PX"
                    android:text="9.99%"
                    android:textColor="@color/myoptional_red"
                    android:textSize="@dimen/DIMEN_20PX" />

                <TextView
                    android:id="@+id/tv_coustom_collection_prcie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/tv_coustom_collection_title_zf"
                    android:layout_toRightOf="@id/tv_coustom_collection_title"
                    android:gravity="right"
                    android:text="331.11"
                    android:textColor="@color/myoptional_red"
                    android:textSize="@dimen/DIMEN_20PX" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rllayout_first"
                android:layout_marginTop="@dimen/DIMEN_8PX"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_coustom_collection_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5412"
                    android:textColor="#565656"
                    android:textSize="@dimen/DIMEN_14PX" />

                <com.ac57.ui.view.RoundCornerTextView
                    android:id="@+id/rctv_coustom_collection_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_8PX"
                    android:background="@color/myoptional_green"
                    android:paddingBottom="@dimen/DIMEN_2PX"
                    android:paddingLeft="@dimen/DIMEN_4PX"
                    android:paddingRight="@dimen/DIMEN_4PX"
                    android:paddingTop="@dimen/DIMEN_2PX"
                    android:text="中南"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/DIMEN_16PX" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/pickerview_wheelview_textcolor_center" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llayout_delete_menu"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="#e2465e"
        android:gravity="center">

        <ImageView
            android:id="@+id/trash"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/market_delet" />

        <TextView
            android:id="@+id/tv_collection_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </LinearLayout>
</com.ac57.ui.view.SwipeMenuLayout>