<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_option_watch_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1d1a29"
        android:paddingBottom="@dimen/DIMEN_20PX"
        android:paddingLeft="@dimen/DIMEN_25PX"
        android:paddingRight="@dimen/DIMEN_25PX"
        android:paddingTop="@dimen/DIMEN_20PX"
        android:text="当前已关注的文交所(前2家)"
        android:textColor="#8d91a6"
        android:textSize="@dimen/DIMEN_20PX" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_option_watch_center_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1d1a29"
        android:paddingBottom="@dimen/DIMEN_20PX"
        android:paddingLeft="@dimen/DIMEN_25PX"
        android:paddingRight="@dimen/DIMEN_25PX"
        android:paddingTop="@dimen/DIMEN_20PX"
        android:text="投资策略"
        android:textColor="#8d91a6"
        android:textSize="@dimen/DIMEN_20PX" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_option_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rlayout_read_one_mores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1d1a29"
        android:paddingBottom="@dimen/DIMEN_15PX"
        android:paddingLeft="@dimen/DIMEN_25PX"
        android:paddingRight="@dimen/DIMEN_25PX"
        android:paddingTop="@dimen/DIMEN_15PX">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文交所涨幅榜"
            android:textColor="#8d91a6"
            android:textSize="@dimen/DIMEN_18PX" />

        <TextView
            android:id="@+id/tv_read_one_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="更多"
            android:textColor="#2c8dff"
            android:textSize="@dimen/DIMEN_18PX" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#202032"
        android:paddingBottom="@dimen/DIMEN_30PX"
        android:paddingLeft="@dimen/DIMEN_25PX"
        android:paddingRight="@dimen/DIMEN_50PX"
        android:paddingTop="@dimen/DIMEN_30PX">

        <TextView
            android:id="@+id/myoptional_tab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文交所名称"
            android:textColor="#636370"
            android:textSize="@dimen/DIMEN_20PX" />

        <TextView
            android:id="@+id/myoptional_tab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/myoptional_tab3"
            android:layout_toRightOf="@+id/myoptional_tab1"
            android:gravity="right"
            android:text="最新价"
            android:textColor="#636370"
            android:textSize="@dimen/DIMEN_20PX" />

        <TextView
            android:id="@+id/myoptional_tab3"
            android:layout_width="@dimen/DIMEN_80PX"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:gravity="right"
            android:text="涨幅"
            android:textColor="#636370"
            android:textSize="@dimen/DIMEN_20PX" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#242438" />


</LinearLayout>