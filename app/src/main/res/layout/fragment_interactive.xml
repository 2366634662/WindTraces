<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.ac57.ui.main.fragment.InteractiveFragment">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="互动"
        android:textColor="#565656"
        android:textSize="24dp" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tlayout_interactive"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_54PX"
        app:tabBackground="@android:color/white"
        app:tabContentStart="@dimen/DIMEN_25PX"
        app:tabIndicatorColor="#3e97ff"
        app:tabIndicatorHeight="@dimen/DIMEN_3PX"
        app:tabMinWidth="@dimen/DIMEN_70PX"
        app:tabSelectedTextColor="#5a5a5a"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearanceInverse"
        app:tabTextColor="#9e9e9e" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_interact"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
