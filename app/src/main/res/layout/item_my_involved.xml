<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/DIMEN_25PX">

        <com.ac57.ui.view.CircleImageView
            android:id="@+id/involved_item_head"
            android:layout_width="@dimen/DIMEN_58PX"
            android:layout_height="@dimen/DIMEN_58PX"
            android:layout_centerVertical="true"
            android:src="@drawable/personal_head_portrait" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_10PX"
            android:layout_toLeftOf="@+id/involved_item_bnt"
            android:layout_toRightOf="@+id/involved_item_head"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/involved_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小二"
                    android:textColor="#4a4a4a"
                    android:textSize="@dimen/DIMEN_20PX" />

                <ImageView
                    android:id="@+id/involved_item_level"
                    android:layout_width="@dimen/DIMEN_36PX"
                    android:layout_height="@dimen/DIMEN_20PX"
                    android:layout_marginLeft="@dimen/DIMEN_8PX"
                    android:src="@drawable/level1" />
            </LinearLayout>

            <TextView
                android:id="@+id/involved_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_10PX"
                android:text="三小时前"
                android:textColor="#a2a4a5"
                android:textSize="@dimen/DIMEN_16PX" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/involved_item_bnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/involved_item_bnt_icon"
                android:layout_width="@dimen/DIMEN_14PX"
                android:layout_height="@dimen/DIMEN_18PX"
                android:src="@drawable/personal_delet_blue" />

            <TextView
                android:id="@+id/involved_item_bnt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_5PX"
                android:background="@null"
                android:text="删除"
                android:textColor="#3e97ff"
                android:textSize="@dimen/DIMEN_16PX" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/involved_item_mess"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/DIMEN_25PX"
        android:paddingRight="@dimen/DIMEN_25PX"
        android:text=""
        android:textColor="#4c4c4c"
        android:textSize="@dimen/DIMEN_20PX" />

    <LinearLayout
        android:id="@+id/involved_item_content_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/DIMEN_25PX"
        android:background="#f6f6f6"
        android:orientation="vertical"
        android:padding="@dimen/DIMEN_15PX">

        <TextView
            android:id="@+id/involved_item_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="谁买谁发财"
            android:textColor="#4c4c4c"
            android:textSize="@dimen/DIMEN_20PX" />

        <cn.bingoogolapple.photopicker.widget.BGANinePhotoLayout
            android:id="@+id/nine_interact_item_item_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:bga_npl_itemCornerRadius="0dp"
            app:bga_npl_itemSpanCount="3"
            app:bga_npl_itemWhiteSpacing="4dp"
            app:bga_npl_itemWidth="0dp"
            app:bga_npl_otherWhiteSpacing="64dp"
            app:bga_npl_placeholderDrawable="@mipmap/bga_pp_ic_holder_light"
            app:bga_npl_showAsLargeWhenOnlyOne="true" />

        <ImageView
            android:id="@+id/involved_item_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_12PX"
        android:background="#f2f2f2" />
</LinearLayout>